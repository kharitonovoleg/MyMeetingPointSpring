<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/meeting_point_spring</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">admin</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>

        <mapping class="by.kharitonov.model.User"/>
        <mapping class="by.kharitonov.model.News"/>
        <mapping class="by.kharitonov.model.Role"/>
        <mapping class="by.kharitonov.model.User"/>
        <mapping class="by.kharitonov.model.Event"/>

    </session-factory>
</hibernate-configuration>